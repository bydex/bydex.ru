mixin icon({className, svgName, viewBoxName = false})
    svg(class=className viewBox=viewBoxName)
        use(xlink:href=`./img/sprites/sprite.svg#${svgName}`)

mixin picture({path = '', name, imgType, sourceType = 'webp', imgClass = false})
    picture
        source(srcset= `./img/${path}/${name}.${sourceType}` type=`image/${sourceType}`)
        img(class=imgClass src= `./img/${path}/${name}.${imgType}` alt=name)
